<%-include("top_page.ejs")%>
<link rel="stylesheet" href="/css/register.css">
<title>הרשמה לאפליקציה</title>
</head>
<body>
    <main class="reg_container">
        <h2>הרשמה לאפליקציה</h2>
        <form class="reg_form" action="/users/Add" method="post">
            <div class="form-group">
                <label for="realName">:שם מלא</label>
                <input type="text" id="realName" name="realName" required />
            </div>
            <div class="form-group">
                <label for="email">:מייל</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="userName">:שם משתמש</label>
                <input type="text" id="userName" name="userName" required />
            </div>
            <div class="form-group">
                <label for="password">:סיסמה</label>
                <input type="password" id="password" name="password" required />
            </div>
            <div class="form-group">
                <button type="submit">הרשם</button>
            </div>
        </form>
        <a href="/users/login" class="login-link">כבר יש לך חשבון? התחבר כאן</a>
    </main>
    <script src="/js/register_script.js"></script>
<%-include("bottom_page.ejs")%>